model standard.discrete

concept grid1d(size: N1')
{
    size ::= size;

    indexes: ordered;    
    nodes: ordered;
    cells: ordered;
    extents: sequence of cells

    left: indexes -> nodes;
    right: indexes -> npdes;
    cell: indexes -> cells;

    index: N0'(..size-1) -> indexes;
}

concept time(horizon: N1') extends grid1d(horizon)
{
    horizon is size;
    ticks is nodes;
    slots is cells;
    start is left;
    end is right;
}