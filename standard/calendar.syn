model standard.calendar

ordered DATE;
LOCAL_DATE ::= (DATE, TIME_ZONE | UTC); 
GLOBAL_DATE ::= (DATE, UTC);

ordered MONTH;
ordered YEAR;
ordered DAY_OF_WEEK;
ordered DAY_OF_MONTH(YEAR, MONTH);

Month:              DATE -> MONTH;
Year:               DATE -> YEAR;
DayOfWeek:          DATE -> DAY_OF_WEEK;
MonthAndDay:     d: DATE -> (MONTH, DAY_OF_MONTH(Year(d), m));
YearAndMonth        DATE -> (YEAR, MONTH, N1);
YearMonthAndDay:    DATE -> (y:YEAR, m:MONTH, DAY_OF_MONTH(y, m));